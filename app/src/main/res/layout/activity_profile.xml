<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/toolbarforscreens"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.08"
            android:layout_width="fill_parent"
            android:id="@+id/toolbar">
        </include>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edtmap"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:drawablePadding="5dp"
            android:textAlignment="textStart"
            android:textColorHint="#C5C3C3"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintHeight_percent="0.32"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.99">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/profile_image"
                android:layout_width="fill_parent"
                android:scaleType="fitXY"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            android:textAllCaps="true"
            android:text="Profile Details"
            android:textColor="@color/textcolour"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:background="@color/backgroundcolor"
            android:id="@+id/moreinfo"
            app:layout_constraintTop_toBottomOf="@+id/edtmap"
            android:layout_weight="1"
            tools:ignore="MissingConstraints">
        </TextView>
         <LinearLayout
                android:layout_width="match_parent"
             app:layout_constraintTop_toBottomOf="@+id/moreinfo"
                android:weightSum="6"
                android:layout_height="0dp"
             app:layout_constraintHeight_percent="0.54"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/linearlayout1"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toBottomOf="@id/moreinfo"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:id="@+id/txtusername"
                        android:textColor="@color/textcolour"
                        android:text="User Name"
                        android:layout_weight="1">
                    </TextView>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:hint="UserName"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/texthint"
                        android:textSize="17dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:id="@+id/edtname"
                        android:layout_weight="1">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/linearlayout2"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@id/linearlayout1"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@color/textcolour"
                        android:text="Phone Number"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:layout_width="fill_parent"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_height="fill_parent"
                        android:textColorHint="@color/texthint"
                        android:textColor="@color/black"
                        android:hint="Number"
                        android:enabled="true"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:id="@+id/edtphone"
                        android:layout_weight="1">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/linearlayout4"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:weightSum="2"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:id="@+id/txtemail"
                        android:textColor="@color/textcolour"
                        android:text="Email Address"
                        android:layout_weight="1">
                    </TextView>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColorHint="@color/texthint"
                        android:textSize="18dp"
                        android:enabled="false"
                        android:inputType="number"
                        android:hint="Email"
                        android:textColor="@color/textcolour"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:id="@+id/edtemail"
                        android:layout_weight="1">
                    </EditText>
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/textcolour"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:background="@color/backgroundcolor"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">
                </TextView>
                <Button
                    android:layout_width="fill_parent"
                    android:textColor="@color/black"
                    android:layout_height="fill_parent"
                    android:text="Submit"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:id="@+id/submitbutton"
                    tools:ignore="MissingConstraints">
                </Button>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/textcolour"
                    android:textStyle="bold"
                    android:paddingStart="15dp"
                    android:background="@color/backgroundcolor"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">
                </TextView>
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>