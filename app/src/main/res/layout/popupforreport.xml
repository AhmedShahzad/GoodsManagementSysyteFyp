<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginRight="35dp"
    android:layout_marginLeft="35dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHeight_percent="0.40"
    app:cardCornerRadius="10dp"
    tools:ignore="MissingConstraints">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="fill_parent"
            android:text="Why you report this Deal?"
            android:id="@+id/cross"
            android:paddingTop="10dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.17"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </TextView>
        <EditText
            android:layout_width="fill_parent"
            android:hint="Why you report this Deal?"
            android:id="@+id/reason"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:gravity="top"
            android:paddingBottom="10dp"
            android:textSize="15dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.66"
            android:textColor="@color/black"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/cross">
        </EditText>
        <Button
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.50"
            android:textColor="@color/colorPrimary"
            android:background="@color/commentscolour"
            android:text="Cancell"
            android:id="@+id/cancell"
            android:textAllCaps="false"
            android:layout_height="0dp"
            android:layout_marginLeft="0.5dp"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintBottom_toBottomOf="parent">
        </Button>
        <Button
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.50"
            android:text="Submit"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="0.5dp"
            android:background="@color/commentscolour"
            android:id="@+id/submit"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/cancell"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintBottom_toBottomOf="parent">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>