<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundcolor"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
       app:layout_constraintTop_toTopOf="parent"
        android:background="@color/cellbackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="fill_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_height="160dp"
            android:background="@color/cellbackground"
            android:id="@+id/layoutstart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                android:src="@drawable/nobackimage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.33"
                tools:ignore="MissingConstraints">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/image"
                android:textColor="@color/textcolour"
                android:layout_gravity="top"
                android:text="House and Lands"
                android:id="@+id/description"
                tools:ignore="MissingConstraints">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/tvfinalrate"
                android:layout_gravity="left"
                android:paddingRight="5dp"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/textcolour"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:text="----"
                android:id="@+id/discountpercentage"
                android:layout_weight="2">
            </TextView>
            <TextView
                android:id="@+id/actualprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"
                android:text="$400"
                android:textColor="@color/textcolour"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/image"
                tools:ignore="MissingConstraints">
            </TextView>

            <TextView
                android:id="@+id/tvfinalrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:text="$390"
                android:textColor="@color/red"
                android:textSize="19dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="102dp"
                tools:ignore="MissingConstraints">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:id="@+id/view"
        android:background="@color/linecolour"
        app:layout_constraintTop_toBottomOf="@+id/layoutstart">
    </View>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/backgroundcolor"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutstart">
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>