<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commentscolour"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context=".HomeFragment">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <include
    layout="@layout/toolbarwithnohome"
      android:layout_height="0dp"
      android:layout_width="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHeight_percent="0.08"
    android:id="@+id/toolbar">
  </include>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:drawablePadding="5dp"
              android:paddingLeft="20dp"
              android:gravity="center_vertical"
              android:background="@color/backgroundcolor"
              android:textStyle="bold"
              android:textColor="@color/textcolour"
              android:paddingTop="2dp"
              app:layout_constraintHeight_percent="0.06"
              app:layout_constraintTop_toBottomOf="@+id/toolbar"
              android:id="@+id/allcategories"
              android:text="All Categories"/>
  <GridLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:id="@+id/gridlayout"
      app:layout_constraintTop_toBottomOf="@+id/allcategories"
      android:background="@color/commentscolour"
      app:layout_constraintHeight_percent="0.50"
    android:orientation="vertical">
    <GridView
        android:layout_width="match_parent"
        android:background="@color/backgroundcolor"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:id="@+id/gridview"
        tools:ignore="MissingConstraints">
    </GridView>
  </GridLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:drawablePadding="5dp"
      android:paddingLeft="20dp"
      android:gravity="center_vertical"
      android:background="@color/backgroundcolor"
      android:textStyle="bold"
      android:textColor="@color/black"
      android:paddingTop="2dp"
    app:layout_constraintHeight_percent="0.06"
      app:layout_constraintTop_toBottomOf="@+id/gridlayout"
    android:id="@+id/hotdeals"
    android:text="Khmer New Deals">
  </TextView>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/listviewlayout"
      android:layout_width="match_parent"
      app:layout_constraintTop_toBottomOf="@+id/hotdeals"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="2dp"
      android:background="@color/white"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="2dp"
      app:layout_constraintHeight_percent="0.30"
      android:layout_height="0dp">
    <ListView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="fill_parent"
        android:dividerHeight="5dp"
        android:id="@+id/hotdealslistview">
    </ListView>
  </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:visibility="gone"
            android:background="@color/white"
            android:id="@+id/drawermenu"
            app:layout_constraintHeight_percent="0.92"
            android:layoutAnimation="@anim/layout_animation_left_to_right"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintWidth_percent="0.70"
            android:layout_height="0dp"
            tools:ignore="MissingConstraints">
            <include
                layout="@layout/nav_header_user_side_drawer"
                android:layout_width="fill_parent"
                android:id="@+id/includelayout"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.20">
            </include>
            <TextView
                android:layout_width="fill_parent"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:textSize="24dp"
                android:layout_height="wrap_content"
                android:id="@+id/khmer"
                app:layout_constraintTop_toBottomOf="@+id/includelayout"
                android:textColor="@color/textcolour"
                android:text="Khmer"
                android:layout_weight="1">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/homedeals"
                app:layout_constraintTop_toBottomOf="@+id/khmer"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:src="@drawable/myprofile">
                </ImageView>
                <TextView
                    android:layout_width="fill_parent"
                    android:textSize="21dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolour"
                    android:text="Home"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/homedeals"
                android:id="@+id/viewhome"
                android:background="@color/backgroundcolor">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/newdeals"
                app:layout_constraintTop_toBottomOf="@+id/viewhome"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:src="@drawable/myprofile">
                </ImageView>
                    <TextView
                        android:layout_width="fill_parent"
                        android:textSize="21dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textcolour"
                        android:text="New Deals"
                        android:layout_weight="1">
                    </TextView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/newdeals"
                android:id="@+id/view1"
                android:background="@color/backgroundcolor">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/hotdealslayout"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"

                    android:layout_gravity="center"
                    android:src="@drawable/myprofile">
                </ImageView>
                <TextView
                    android:layout_width="fill_parent"
                    android:textSize="21dp"
                    android:paddingTop="5dp"


                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolour"
                    android:text="Hot Deals"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/hotdealslayout"
                android:id="@+id/view2"
                android:background="@color/backgroundcolor">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/highlights"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:src="@drawable/myprofile">
                </ImageView>
                <TextView
                    android:layout_width="fill_parent"
                    android:text="Highlights"


                    android:textSize="21dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolour"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/highlights"
                android:id="@+id/view3"
                android:background="@color/backgroundcolor">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/discussed"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:src="@drawable/myprofile">
                </ImageView>
                <TextView
                    android:layout_width="fill_parent"
                    android:textSize="21dp"
                    android:paddingTop="5dp"


                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolour"
                    android:text="Discussed"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/discussed"
                android:id="@+id/view4"
                android:background="@color/backgroundcolor">
            </View>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/more"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/view4"
                android:textColor="@color/textcolour"
                android:text="More"
                android:layout_weight="1">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/privacylayout"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/more"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:src="@drawable/myprofile">
                </ImageView>
                <TextView
                    android:layout_width="fill_parent"
                    android:textSize="21dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"


                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolour"
                    android:text="Pirvacy Policy"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>
            <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/privacylayout"
            android:id="@+id/view5"
            android:background="@color/backgroundcolor">
        </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/termsandserviceslayout"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:src="@drawable/myprofile">
                </ImageView>
                <TextView
                    android:layout_width="fill_parent"
                    android:textSize="21dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"


                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolour"
                    android:text="Terms And Services"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/termsandserviceslayout"
                android:id="@+id/view6"
                android:background="@color/backgroundcolor">
            </View>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="fill_parent"
                android:textSize="21dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/darkmode"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolour"
                android:text="Dark Mode"
                android:layout_weight="1">
            </androidx.appcompat.widget.SwitchCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>