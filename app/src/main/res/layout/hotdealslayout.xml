<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutstart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.85"
            app:layout_constraintWidth_percent="0.33"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:id="@+id/image"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="MissingConstraints">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/image"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:text="House and Lands"
            android:id="@+id/description"
            tools:ignore="MissingConstraints">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:paddingRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:text="16 % Off"
            android:id="@+id/discountpercentage"
            android:layout_weight="2">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:layout_constraintTop_toBottomOf="@+id/discountpercentage"
            android:gravity="left"
            app:layout_constraintLeft_toRightOf="@+id/image"
            android:textColor="@color/black"
            android:id="@+id/actualprice"
            android:textSize="16dp"
            android:text="$400">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingRight="5dp"
            android:layout_gravity="right"
            android:gravity="right"
            app:layout_constraintTop_toBottomOf="@+id/discountpercentage"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="$390"
            android:id="@+id/tvfinalrate">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="left"
            app:layout_constraintTop_toBottomOf="@+id/tvfinalrate"
            android:gravity="left"
            app:layout_constraintLeft_toRightOf="@+id/image"
            android:textColor="@color/black"
            android:id="@+id/likes"
            android:textSize="16dp"
            android:text="34 likes">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="right"
            android:gravity="right"
            app:layout_constraintTop_toBottomOf="@+id/tvfinalrate"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="End date"
            android:id="@+id/dislikes">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>